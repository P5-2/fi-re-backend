<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="fi.re.firebackend.dao.finance.fund.FundDao">
    <select id="getFundById"
            parameterType="int"
            resultType="fi.re.firebackend.dto.finance.fund.FundDto">
        select prdNo, pname, type, rate, dngrGrade, region, bseDt, selectCount, nav
        from fund
        where prdNo = #{prdNo}
    </select>

    <select id="hot"
            resultType="fi.re.firebackend.dto.finance.fund.FundDto">
        select prdNo, pname, type, rate, dngrGrade, region, bseDt, selectCount, nav
        from fund
        order by selectCount desc
        limit 3
    </select>

    <select id="all"
            resultType="fi.re.firebackend.dto.finance.fund.FundDto">
        select prdNo, pname, type, rate, dngrGrade, region, bseDt, selectCount, nav
        from fund
    </select>


    <!-- 페이지 네이션 -->
    <select id="selectFunds" resultType="fi.re.firebackend.dto.finance.fund.FundDto">
        SELECT *
        FROM fund
        ORDER BY prdNo
        LIMIT #{size} OFFSET #{offset}
    </select>

    <select id="countFunds" resultType="int">
        SELECT COUNT(*)
        FROM fund
    </select>

    <!-- 장바구니 -->
    <update id="updateFundCartStatus">
        UPDATE fund SET isInCart = #{isInCart} WHERE prdNo = #{prdNo}
    </update>

    <!-- 장바구니 목록 조회 -->
    <select id="selectFundsInCart" resultType="fi.re.firebackend.dto.finance.fund.FundDto">
        SELECT * FROM fund
        WHERE isInCart = 1
    </select>
</mapper>