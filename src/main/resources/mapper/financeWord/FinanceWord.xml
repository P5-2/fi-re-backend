<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="fi.re.firebackend.dao.financeWord.FinanceWordDao">
    <select id="count"
        resultType="int">
        select count(*)
        from finance_word
    </select>

    <insert id="insertFinanceWord"
            parameterType="fi.re.firebackend.dto.financeWord.FinanceWordDto">
        insert into finance_word(fnceDictNm, ksdFnceDictDescContent)
        values(#{fnceDictNm}, #{ksdFnceDictDescContent})
    </insert>

    <select id="getFinanceWord"
            parameterType="int"
            resultType="fi.re.firebackend.dto.financeWord.FinanceWordDto">
        select id, fnceDictNm, ksdFnceDictDescContent
        from finance_word
        where id=#{id}
    </select>
</mapper>