<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="fi.re.firebackend.dao.recommendation.FundRcmdDao">

    <select id="getAllFund" resultType="fi.re.firebackend.dto.recommendation.filtering.FundVo">
        SELECT prdNo,
               pname,
               type,
               rate,
               dngrGrade,
               region
        FROM fund
    </select>
    <select id="getMemberInfo" parameterType="java.lang.String"
            resultType="fi.re.firebackend.dto.recommendation.MemberEntity">
        SELECT username,
               age,
               salary,
               assets,
               riskPoint,
               goalAmount,
               keyword
        FROM member
        where username like #{username}
    </select>

</mapper>

